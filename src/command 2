docker network create \
  --driver=bridge \
  --subnet=192.168.1.0/24 \
  --ip-range=192.168.1.0/24 \
  --opt com.docker.network.bridge.enable_ip_masquerade=false \
  --opt com.docker.network.bridge.name=ospfbr0 \
  ospf_network


docker run -d --name router1 --net ospf_network --ip 192.168.1.2 --cap-add=NET_RAW --cap-add=NET_ADMIN --privileged routing_project
docker run -d --name router2 --net ospf_network --ip 192.168.1.3 --cap-add=NET_RAW --cap-add=NET_ADMIN --privileged routing_project
docker run -d --name router3 --net ospf_network --ip 192.168.1.4 --cap-add=NET_RAW --cap-add=NET_ADMIN --privileged routing_project
docker run -d --name router4 --net ospf_network --ip 192.168.1.5 --cap-add=NET_RAW --cap-add=NET_ADMIN --privileged routing_project

./ospf_router
